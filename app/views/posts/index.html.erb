<h1>Blog Posts</h1>
<% @posts.each do |post| %>
  <div class="card card-block card-inverse" style="background-color: #333; border-color: #333; color: white;">
    <h3 class="card-title"><%= post.title %></h3>
    <p class="card-text"><%= post.body %></p>
    <%= link_to "Read More", post_path(post), :class => 'btn btn-primary' %>
  </div>
<% end %>